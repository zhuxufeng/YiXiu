<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TopBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<com.zykj.yixiu.TopBar
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    TopBar:leftbg="@mipmap/u312"


    TopBar:centerText="平台服务"
    TopBar:centerColor="#00cccc"
    >

</com.zykj.yixiu.TopBar>
    <include layout="@layout/include_line"
        android:layout_width="match_parent"
        android:layout_height="5dp">

    </include>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="@mipmap/u28"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
       <FrameLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@mipmap/u1439"/>
           <ImageView
               android:layout_gravity="center"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@mipmap/u1443"/>
       </FrameLayout>
        <TextView
            android:layout_weight="1"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常见问题"/>



    </LinearLayout>
    <TextView
        android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="NOKIA的开机后反复白屏重启，或者某个功能进不去等，这一类的故障是软件的问题。
        国产机MTk系列，不断提示充电器链接，充电器移除时CPU虚焊。
        "
    />
    <TextView
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="维修方法："
        />
    <TextView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="软件故障就刷机，硬件故障就修硬件，用电源夹上看手机电流."/>



</LinearLayout>
